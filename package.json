{
  "name": "app",
  "version": "1.5.0",
  "description": "Iron Rails is a 2D side-scrolling auto-battler web game where you manage a steampunk train fighting through a zombie apocalypse.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage --run",
    "test:ui": "vitest --ui",
    "test:visual": "playwright test -c tests/visual/playwright.config.ts",
    "test:bench": "vitest bench --run -c tests/benchmarks/vitest.bench.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geehexx/iron-rails.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/geehexx/iron-rails/issues"
  },
  "homepage": "https://github.com/geehexx/iron-rails#readme",
  "dependencies": {
    "phaser": "^3.87.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "markdownlint-cli2": "^0.18.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "**/*.md": "markdownlint-cli2 --fix"
  }
}
